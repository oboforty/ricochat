<Window x:Class="RicoChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RicoChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="200"
        Closing="Window_Closing">

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25px" />
            <RowDefinition Height="25px" />
        </Grid.RowDefinitions>


        <Label Grid.Row="0" Grid.Column="1" Content="RicoChat" Foreground="#FFACFF03" FontWeight="Normal" FontSize="24"/>

        <StackPanel Name="Images" Grid.Row="1" Grid.Column="0" Orientation="Vertical"/>
        <StackPanel Name="Usernames" Grid.Row="1" Grid.Column="1" Orientation="Vertical">

            <Image Source="" />

        </StackPanel>

        <ComboBox Grid.Row="2" Grid.Column="1" Name="InputComboBox" Margin="4,0,4,4"/>
        <ComboBox Grid.Row="3" Grid.Column="1" Name="OutputComboBox" Margin="4,0,4,4"/>

    </Grid>
</Window>
